<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.luomor.yiaroundad"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="false"
        android:resizeable="true"
        android:smallScreens="true" />

    <!-- 用户权限设置 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 两种provider的权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 仅网络定位的权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.luomor.yiaroundad.YiAroundAdApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.luomor.yiaroundad.module.common.SplashActivity"
            android:theme="@style/ColorTranslucentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 主界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.common.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityColorTranslucentTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />


        <!-- 登录界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.common.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- 注册界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.common.RegisterActivity"
            android:screenOrientation="portrait" />


        <!-- APP简介界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.common.AppIntroduceActivity"
            android:screenOrientation="portrait" />


        <!-- 浏览器界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.common.BrowserActivity"
            android:screenOrientation="portrait" />


        <!-- 视频详情界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.video.VideoDetailsActivity"
            android:screenOrientation="portrait" />


        <!-- 用户详情界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.user.UserInfoDetailsActivity"
            android:screenOrientation="portrait" />


        <!-- 专题详情界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.food.SpecialDetailsActivity"
            android:screenOrientation="portrait" />


        <!-- 分区详情界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.region.RegionTypeDetailsActivity"
            android:screenOrientation="portrait" />


        <!-- 美食时间表界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.food.FoodScheduleActivity"
            android:screenOrientation="portrait" />

        <!--追美食界面-->


        <!-- 游戏中心界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.entry.GameCentreActivity"
            android:screenOrientation="portrait" />

        <!-- 离线缓存界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.entry.OffLineDownloadActivity"
            android:screenOrientation="portrait" />


        <!-- 直播详情界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.live.LivePlayerActivity"
            android:screenOrientation="portrait" />


        <!-- 美食索引界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.food.FoodIndexActivity"
            android:screenOrientation="portrait" />

        <!-- 美食列表界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.shop.ShopIndexActivity"
            android:screenOrientation="portrait" />

        <!-- 关于我 -->
        <activity
            android:name="com.luomor.yiaroundad.module.common.YiAroundAdInfoActivity"
            android:screenOrientation="portrait" />


        <!-- 全区排行榜界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.discover.AllAreasRankActivity"
            android:screenOrientation="portrait" />


        <!-- 全站搜索界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.search.TotalStationSearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Search" />


        <!-- 原创排行榜界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.discover.OriginalRankActivity"
            android:screenOrientation="portrait" />


        <!-- 分季全部新美食界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.food.SeasonNewFoodActivity"
            android:screenOrientation="portrait" />


        <!--新美食连载全部界面-->
        <activity
            android:name="com.luomor.yiaroundad.module.home.food.NewFoodSerialActivity"
            android:screenOrientation="portrait" />


        <!-- 美食详情界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.food.FoodDetailsActivity"
            android:screenOrientation="portrait" />

        <!-- 美食店铺详情界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.shop.ShopDetailsActivity"
            android:screenOrientation="portrait" />

        <!-- 话题中心界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.discover.TopicCenterActivity"
            android:screenOrientation="portrait" />


        <!-- 活动中心界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.home.discover.ActivityCenterActivity"
            android:screenOrientation="portrait" />

        <!-- 易会员界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.entry.VipActivity"
            android:screenOrientation="portrait" />

        <!--分区直播界面-->
        <activity
            android:name="com.luomor.yiaroundad.module.home.region.LiveAppIndexActivity"
            android:screenOrientation="portrait" />

        <!--分区广告界面-->
        <activity
            android:name="com.luomor.yiaroundad.module.home.region.AdvertisingActivity"
            android:screenOrientation="portrait" />


        <!-- 播放器界面 -->
        <activity
            android:name="com.luomor.yiaroundad.module.video.VideoPlayerActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:exported="false"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@style/ColorTranslucentTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />


    </application>

</manifest>